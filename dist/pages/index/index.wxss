html,
body .app {
  color: #333333;
  font-family: Arial, Helvetica, 'STHeiti STXihei', 'Microsoft YaHei', Tohoma, sans-serif;
  background-color: #f8f8f8; }

.app-container {
  padding-bottom: 50px; }

page {
  background: #f8f8f8; }

.container {
  padding: 45rpx 32rpx;
  background: #fff; }
  .container .index-bd .title {
    margin-bottom: 20rpx; }
    .container .index-bd .title .logo {
      width: 72rpx;
      height: 72rpx; }
    .container .index-bd .title .logo,
    .container .index-bd .title .title-text {
      display: inline-block;
      vertical-align: middle; }
    .container .index-bd .title .title-text {
      font-size: 50rpx;
      font-weight: 500;
      margin-left: 20rpx; }
  .container .index-bd .desc {
    font-size: 28rpx;
    color: #7d7e80;
    padding-left: 120rpx; }
  .container .list .item {
    font-size: 28rpx;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #ebedf0; }
